FROM python:3.11-slim

WORKDIR /app

# 複製 shared 模組 (解決 Zeabur 部署問題)
COPY shared/ ./shared/

# 複製 snowbuddy_matching 服務
COPY snowbuddy_matching/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY snowbuddy_matching/ ./

# 設定 Python 路徑包含 shared 模組
ENV PYTHONPATH=/app

EXPOSE 8002

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8002"]
