{
  "$schema": "https://zeabur.com/schema/service.json",
  "name": "gear-api",
  "buildCommand": "pip install -r requirements.txt",
  "startCommand": "uvicorn api.main:app --host 0.0.0.0 --port 8002",
  "ports": [8002],
  "env": {
    "PYTHONPATH": {
      "default": "/app"
    },
    "USER_CORE_BASE_URL": {
      "default": "https://user-core.zeabur.app"
    },
    "NOTIFICATION_GATEWAY_URL": {
      "default": "https://notification-gateway.zeabur.app"
    }
  },
  "services": {
    "database": {
      "type": "postgresql"
    }
  }
}
