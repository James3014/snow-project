{
  "$schema": "https://zeabur.com/schema/service.json",
  "name": "user-core-api",
  "dockerfile": "Dockerfile",
  "buildCommand": "pip install -r requirements.txt",
  "startCommand": "uvicorn api.main:app --host 0.0.0.0 --port $PORT",
  "env": {
    "PYTHONPATH": {
      "default": "/app"
    }
  },
  "services": {
    "database": {
      "type": "postgresql"
    }
  }
}
